# ============================================
# ECOLEDGER ENVIRONMENT VARIABLES (EXAMPLE)
# ============================================
# Copy this file to .env and fill in your actual values

# Climatiq API Configuration
# Get your API key from: https://www.climatiq.io/
CLIMATIQ_API_KEY=your_climatiq_api_key_here
CLIMATIQ_API_URL=https://api.climatiq.io/data/v1

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/
MONGODB_DATABASE=eco_ledger_db

CASSANDRA_HOST=localhost
CASSANDRA_PORT=9042
CASSANDRA_KEYSPACE=eco_logs

# Application Configuration
APP_ENV=development
APP_PORT=5000
APP_HOST=0.0.0.0

# Security
SECRET_KEY=your_secret_key_here_change_in_production
JWT_SECRET=your_jwt_secret_here_change_in_production
JWT_EXPIRATION_HOURS=24

# CORS Settings (Frontend URLs)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Logging
LOG_LEVEL=INFO
